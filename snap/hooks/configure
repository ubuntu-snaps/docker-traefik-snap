#!/bin/sh -eu

if [ ! -d $SNAP_DATA/conf.d ]; then
  mkdir -p $SNAP_DATA/conf.d
fi

cat > $SNAP_DATA/traefik.yml <<EOF
api:
  insecure: true
log:
  level: info
providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
  file:
    directory: /etc/traefik/conf.d
    watch: true
EOF

cat > $SNAP_DATA/env.conf <<EOF
EOF

snapctl restart "$SNAP_INSTANCE_NAME"
